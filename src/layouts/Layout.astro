---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const navLinks = [
  { name: "Home", href: "#about" },
  { name: "Stack", href: "#stack" },
  { name: "Work", href: "#work" },
];

const { title = "Jordi Vidal Roselló | Portfolio", description = "Full-Stack Developer enfocado en JavaScript y TypeScript" } = Astro.props as Props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="bg-slate-950 text-slate-100 antialiased">
    <a class="skip-link" href="#about">Saltar al contenido</a>

    <header class="fixed inset-x-0 top-0 z-50 border-b border-white/10 bg-slate-950/80 backdrop-blur">
      <div class="mx-auto flex max-w-5xl items-center justify-between px-6 py-4">
        <a href="#about" class="text-lg font-semibold tracking-tight text-white">Portfolio.</a>

        <nav class="hidden items-center gap-6 md:flex" aria-label="Navegación principal">
          {navLinks.map((link) => (
            <a href={link.href} class="nav-link">
              {link.name}
            </a>
          ))}
        </nav>

        <details class="relative md:hidden">
          <summary class="cursor-pointer text-sm font-semibold text-slate-200">Menú</summary>
          <div class="absolute right-0 mt-3 w-44 rounded-xl border border-white/10 bg-slate-900/95 p-3 shadow-xl">
            <nav class="flex flex-col gap-3 text-sm text-slate-100" aria-label="Navegación móvil">
              {navLinks.map((link) => (
                <a href={link.href} class="rounded px-2 py-1 transition hover:bg-white/5">
                  {link.name}
                </a>
              ))}
            </nav>
          </div>
        </details>
      </div>
    </header>

    <main class="min-h-screen pt-24">
      <slot />
    </main>

    <footer class="mx-auto max-w-5xl px-6 pb-12 text-center footer-text">
      © {new Date().getFullYear()} Portfolio. All Rights Reserved.
    </footer>
  </body>
</html>
